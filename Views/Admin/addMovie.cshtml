<form id="myForm" method="post" action="/Admin/add_movie">
    <div class="form-group">
        <label> New Film Name</label>
        <input type="text" class="form-control" name="Name" id="exampleInputName" required placeholder="">
    </div>
    <div class="form-group">
        <label> New  Description</label>
        <input type="text" class="form-control" name="Description" id="exampleInputName" required placeholder="">
    </div>
    <div class="form-group">
        <label> New  Price</label>
        <input type="text" class="form-control" name="Price" id="exampleInputName" required placeholder="">
    </div>
    <div class="form-group">
        <label> New  ImgUrl</label>
        <input type="text" class="form-control" name="ImgUrl" id="exampleInputName" required placeholder="">
    </div>
    <div class="form-group">
        <label> New  TrailerUrl</label>
        <input type="text" class="form-control" name="TrailerUrl" id="exampleInputName" required placeholder="">
    </div>
    <div class="form-group">
        <label> New  StartDate</label>
        <input type="datetime-local" class="form-control" name="StartDate" id="exampleInputName" required placeholder="">
    </div>
    <div class="form-group">
        <label> New  EndDate</label>
        <input type="datetime-local" class="form-control" name="EndDate" id="exampleInputName" required placeholder="">
    </div>
    <div class="form-group">
        <label for="CategoryId">Category</label>
        @*<input type="number" name="DepartmentId" class="form-control" id="DepartmentId" placeholder="Enter Department Id">*@

        <select class="form-select" name="CategoryId">
            @foreach (var item in  ViewBag.Categories)
            {
               @* if (Model.CategoryId == item.Id)
                {
                    <option value="@item.Id" selected>@item.Name</option>
                }*@

                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CinemaId">Cinema</label>
        @*<input type="number" name="DepartmentId" class="form-control" id="DepartmentId" placeholder="Enter Department Id">*@

        <select class="form-select" name="CinemaId">
            @foreach (var item in ViewBag.cinemas)
            {
                @* if (Model.CategoryId == item.Id)
            {
            <option value="@item.Id" selected>@item.Name</option>
            }*@

                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>





    <button type="submit" class="btn btn-primary">Submit</button>
</form>


       